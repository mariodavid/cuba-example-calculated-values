<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.rtcab.cecv.web.screens.customer">
    <data>
        <instance id="customerDc"
                  class="com.rtcab.cecv.entity.Customer"
                  view="customer-view">
            <loader/>
            <collection id="ordersDc" property="orders"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="customerDc">
            <column width="250px">
                <textField id="nameField" property="name"/>
            </column>
        </form>
        <groupBox id="ordersBox" caption="msg://com.rtcab.cecv.entity/Customer.orders">
            <table id="ordersTable" dataContainer="ordersDc" width="100%" height="200px">
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="orderDate"/>
                    <column id="orderAmount"/>
                </columns>
                <buttonsPanel>
                    <button action="ordersTable.create"/>
                    <button action="ordersTable.edit"/>
                    <button action="ordersTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
